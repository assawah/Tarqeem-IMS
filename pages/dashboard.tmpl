{{define "dashboard"}}
<html lang='en'>
{{template "head" .}}
<head>
     <link rel="stylesheet" href="/dashboard.css">
</head>
<body>
    {{template "header" .}}
    <h3 class="styled-heading">  Hello, {{.User.Name}}</h3>
    <div class="dashboard">
        <div class="table-container">
             <h3>Projects</h3>
             {{ if eq .User.Type "coordinator" }}

              <button class="green-button" onclick="window.location.href='/create-project?t=c';">
              {{message "create_project"}}
              </button>

             {{ end }}
             <table style="width: 100%;">
                   <thead>
                       <tr>
                           <th>Name</th>
                           <th>Type</th>
                           <th>State</th>
                           <th>Project Nature</th>
                       </tr>
                   </thead>
                   <tbody>
                       {{range .Projects}}
                       <tr>
                           <td> <a href="/project?name={{.Name}}"> {{.Name}}</td>
                           <td>{{.Type}}</td>
                           <td>{{.State}}</td>
                           <td>{{.ProjectNature}}</td>
                       </tr>
                       {{end}}
                   </tbody>
               </table>
          </div>
    </div>
    {{template "footer" .}}
</body>

</html>
{{end}}
